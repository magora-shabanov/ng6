user-select($user-select = none)
  -ms-user-select $user-select
  -webkit-user-select $user-select
  -moz-user-select $user-select
  user-select $user-select

page-sides-padding()
  padding-left 25px
  padding-right 25px

button(
$height,
$bgc,
$brc,
$brc-hover,
$bgc-hover,
$color,
$width
)
  display inline-block
  height $height
  padding 0
  border 1px solid $brc
  border-radius 50px
  cursor pointer
  text-align center
  text-transform uppercase
  background-color $bgc
  width $width
  color $color
  font-size 14px
  font-family Calibri
  letter-spacing 1px
  transition background-color .15s cubic-bezier(0.18, 0.89, 0.32, 1.28)
  line-height $height

  &:hover,
  &:active
    background-color $bgc-hover
    border-color $brc-hover
